<div class="card ">
  <header id="header">
      <div class="header-content">
        <div class="dot">
          <%= image_tag ("dot_image"), :class => "dot-img" %>
        </div>
        <div class="title">
          <h1>Check in/out</h1>
        </div>
        <%= link_to 'Home', '/' %>
      </div>
  </header>
  
  <h2 class="login_h2">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :id => 'form'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email_field", placeholder: "Email" %>
    </div>

    <div class="field signup">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em class="em-text">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "email_field", placeholder: "Password" %>
    </div>

    <div class="field signup">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "email_field", placeholder: "Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", :class => "submit-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
